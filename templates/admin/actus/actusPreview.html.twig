{% extends "base.html.twig" %}

{% block title %}Toutes les actus{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center salmon" style="min-height: 140px;">Toutes les Actus</h1>

        {% for actu in actus %}
            <div class="card" style="width: 18rem;float:left;margin-left:2em;">
                <img class="card-img-top" src="{{ asset('upload/' ~ actu.image) }}" alt="{{ actu.title }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ actu.title }}</h5>
                    <p class="card-text">{{ actu.description | u.truncate(75, ' ...') | raw }}</p>
                    <a href="{{ path('admin_actu_detail', {id: actu.id}) }}" class="btn btn-primary">DÃ©tails</a>
                </div>
            </div>            
        {% endfor %}
        <div class="clear" style="clear: both;"></div>
        <div class="text-right">
            <a href="{{ path('admin_actus') }}" class="btn btn-secondary">Retour</a>
        </div>
        
    </div>

{% endblock %}